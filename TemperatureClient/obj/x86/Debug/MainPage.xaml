<Page x:Class="TemperatureClient.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:TemperatureClient"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center"
                       FontSize="26"
                       Text="Temperature (°C)" />
            <TextBlock x:ConnectionId='1' x:Name="temp"
                       HorizontalAlignment="Center"
                       FontSize="64"
                       Text="[n/a]" />
            <StackPanel Margin="0,20,0,0">
                <Line Margin="5"
                      HorizontalAlignment="Stretch"
                      Stroke="#FF0003FF"
                      StrokeThickness="2"
                      X1="0"
                      X2="1000" />

                <Border Width="Auto"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Center"
                        BorderBrush="Gray"
                        BorderThickness="3"
                        CornerRadius="5">
                    <Button x:ConnectionId='3' HorizontalAlignment="Center"
                            Background="{x:Null}"
                                                    
                            Content="Start Sensor" />
                </Border>
                <Border Width="Auto"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        BorderBrush="Gray"
                        BorderThickness="3"
                        CornerRadius="5">
                    <Button x:ConnectionId='2' HorizontalAlignment="Center"
                            Background="{x:Null}"
                                                   
                            Content="Stop Sensor" />
                </Border>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

